variable "namespace" {
  type        = string
  default     = null
  description = "ID element. Usually an abbreviation of your organization name, e.g. 'eg' or 'cp', to help ensure generated IDs are globally unique"
}

variable "stage" {
  type        = string
  default     = null
  description = "ID element. Usually used to indicate role, e.g. 'prod', 'staging', 'source', 'build', 'test', 'deploy', 'release'"
}

variable "name" {
  type        = string
  description = "Dlm name. If provided, the tag name is created with this name instead of generating the name from the context"
}

variable "enabled" {
  type        = bool
  default     = true
  description = "Set to false to prevent the module from creating any resources"
}

variable "file_dashboard" {
  description = "JSON file to Grafana dashboard"
  type        = string
}

variable "folder" {
  description = "ID folder to save the dashboard"
  type        = number
  default     = 0
}
